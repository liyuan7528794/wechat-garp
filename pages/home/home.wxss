/* pages/home/home.wxss */

.swiper-scroll {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.notice {
  flex-direction: row;
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.notice-img {
  width: 50rpx;
  height: 50rpx;
}

.notice-content {
  font-size: 30rpx;
  margin-left: 10rpx;
  display: block;
}

.view-xian {
  width: 100%;
  height: 1rpx;
  background-color: #dddddd;
}

.slide-image {
  display: block;
  height: 280rpx;
  width: 100%;
}

.recommend_container {
  display: flex;
  flex-wrap: wrap;
  padding-top: 18rpx;
  padding-left: 18rpx;
  padding-right: 18rpx;
}

.recommend_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  box-sizing: border-box;
  padding-top: 25rpx;
}

.recommend_img {
  width: 135rpx;
  height: 135rpx;
  border-radius: 15%;
  
}

.recommend_name {
  padding-top: 10px;
}

.tab-list {
  width: 100%;
  height: 102rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: inline-block;
  white-space: nowrap;
}
.swiper-tab-item{
   height: 460rpx;
}
.tab-item {
  width: 50%;
  height: 100rpx;
  display: inline-block;
  line-height: 100rpx;
  vertical-align: middle;
  text-align: center;
}

.selected-tab {
  color: #1aae18;
  border-bottom: 5rpx solid #1aae18;
}

.home-hongdong-img{
  width: 100%;
  height: 170rpx;
}